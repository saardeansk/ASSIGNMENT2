<?xml version="1.0"?>
<robot name="two_link_robot">

  <!-- BASE LINK -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <!-- LINK 1 -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="1.0" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- LINK 2 -->
  <link name="link2">
    <visual>
      <geometry>
        <cylinder length="0.8" radius="0.04"/>
      </geometry>
      <origin xyz="0 0 0.4" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <!-- JOINT 1: between base_link and link1 -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="2" lower="-1.57" upper="1.57"/>
  </joint>

  <!-- JOINT 2: between link1 and link2 -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10" velocity="2" lower="-1.57" upper="1.57"/>
  </joint>

</robot>
